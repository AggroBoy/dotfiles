# MacVim
brew "macvim"

# git
brew "git"

# rg (ripgrep) - a much better grep replacement
brew "ripgrep"

# sd (search and displace) - a search & replace commandline tool
brew "sd"

# fd - a faster, simpler alternative to `find`
brew "fd"

# bat - a cat replacement/improvement
brew "bat"

# exa - a modern ls replacement
brew "exa"

# choose - a simpler/better replacement for cut
brew "choose-rust"

# tldr - simple documentation
brew "tldr"

